{
  "manifest_version": 2,
  "name": "TabSurfer",
  "version": "1.01",
  "description": "Organize tabs into sessions, similar to tmux for browsers.",
  "permissions": ["tabs", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/tabsurfer-logo.png",
      "48": "assets/tabsurfer-logo.png",
      "128": "assets/tabsurfer-logo.png"
    }
  },
  "icons": {
    "16": "assets/tabsurfer-logo.png",
    "48": "assets/tabsurfer-logo.png",
    "128": "assets/tabsurfer-logo.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tabsurfer@example.com"
    }
  }
}
